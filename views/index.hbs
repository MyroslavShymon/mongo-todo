<h2>Todos page</h2>

{{#if todos.length}}
<ul>
{{#each todos}}
<li class="todo">
    <label>
        {{#if completed}}
        <input type="checkbox" checked>
        <span class="completed">{{this.title}}</span>
        {{else}}
        <input type="checkbox">
        <span>{{this.title}}</span>
        {{/if}}

        <button class="btn btn-small">Save</button>
    </label>
</li>
{{/each}}
</ul>
{{else}}
<p>No Todos!</p>
{{/if}}